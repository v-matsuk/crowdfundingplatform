{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>User</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app.admin.user') }}" class="btn btn-primary">Back to users</a>

        <a href="{{ path('app.admin.user.edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>

        {{ include('admin/admin_user/_delete_form.html.twig') }}
    </div>
{% endblock %}
