{% extends 'base.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Campaign</h1>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ campaign.name }}</td>
                </tr>
                <tr>
                    <th>Theme</th>
                    <td>{{ campaign.theme }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ campaign.description }}</td>
                </tr>
                <tr>
                    <th>Video</th>
                    <td>{{ campaign.video }}</td>
                </tr>
                <tr>
                    <th>Money_goal</th>
                    <td>{{ campaign.moneyGoal }}</td>
                </tr>
                <tr>
                    <th>Current_money</th>
                    <td>{{ campaign.currentMoney }}</td>
                </tr>
                <tr>
                    <th>Expiration Date</th>
                    <td>{{ campaign.expirationDate|date('d.m.Y') }}</td>
                </tr>
                <tr>
                    <th>Update Date</th>
                    <td>{{ campaign.date|date('d.m.Y') }}</td>
                </tr>
                <tr>
                    <th>Rating</th>
                    <td>{{ campaign.rating }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app.admin.campaign') }}" class="btn btn-primary">Back to campaigns</a>
        <a href="{{ path('app.admin.campaign.edit', {'id': campaign.id}) }}" class="btn btn-primary">Edit</a>

        {{ include('admin/admin_campaign/_delete_form.html.twig') }}
    </div>

{% endblock %}
