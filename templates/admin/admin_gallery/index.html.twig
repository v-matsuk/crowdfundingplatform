{% extends 'base.html.twig' %}

{% block title %}Gallery index{% endblock %}

{% block body %}
<div class="container-fluid" style="margin-top: 20px">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image1</th>
                <th>Image2</th>
                <th>Image3</th>
                <th>Image4</th>
                <th>Image5</th>
                <th>Image6</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gallery in galleries %}
            <tr>
                <td>{{ gallery.image1 }}</td>
                <td>{{ gallery.image2 }}</td>
                <td>{{ gallery.image3 }}</td>
                <td>{{ gallery.image4 }}</td>
                <td>{{ gallery.image5 }}</td>
                <td>{{ gallery.image6 }}</td>
                <td>
                    <a href="{{ path('app.admin.gallery.edit', {'id': gallery.id}) }}" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
