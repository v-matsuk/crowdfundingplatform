{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1>Post</h1>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ post.name }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ post.text }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ post.image }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ post.date ? post.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app.admin.post') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('app.admin.post.edit', {'id': post.id}) }}" class="btn btn-primary">edit</a>

    {{ include('admin/admin_post/_delete_form.html.twig') }}
</div>
{% endblock %}
