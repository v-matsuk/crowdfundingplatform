{% extends 'admin/admin.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    {{ parent() }}
<div class="container-fluid" style="margin-top: 20px">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Text</th>
                <th>Image</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.name }}</td>
                <td>{{ post.text }}</td>
                <td>{{ post.image }}</td>
                <td>{{ post.date|date('d.m.Y')}}</td>
                <td>
                    <a href="{{ path('app.admin.post.show', {'id': post.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('app.admin.post.edit', {'id': post.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app.admin.post.new') }}" class="btn btn-primary">Create new</a>
</div>
{% endblock %}
