{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1>Comment</h1>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Text</th>
                <td>{{ comment.text }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ comment.date ? comment.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ comment.rating }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app.admin.comment') }}" class="btn btn-primary">Back to Comments</a>

    <a href="{{ path('app.admin.comment.edit', {'id': comment.id}) }}" class="btn btn-primary">Edit</a>

    {{ include('admin/admin_comment/_delete_form.html.twig') }}
{% endblock %}
