{% extends 'base.html.twig' %}

{% block title %}Bonus{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1>Bonus</h1>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ bonus.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ bonus.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bonus.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app.admin.bonus') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('app.admin.bonus.edit', {'id': bonus.id}) }}" class="btn btn-primary">edit</a>

    {{ include('admin/admin_bonus/_delete_form.html.twig') }}
</div>
{% endblock %}
