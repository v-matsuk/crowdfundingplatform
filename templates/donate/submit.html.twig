{% extends 'base.html.twig' %}

{% block title %}Donate{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">
                    <div class="form-group">
                        <h2>You will pay:</h2>
                        <h3>{{ bonus.price }}$</h3>
                        <h2>You will get:  </h2>
                        <div class="btn  btn-success" style="margin-bottom: 20px">
                            <h4>{{ bonus.name }}</h4>
                            <p>{{ bonus.description }}</p>
                        </div>
                        <br>
                        {{ include('donate/_form.html.twig', {'button_label': 'Submit'}) }}
                        <a href="{{ path('app.campaign', {id: id}) }}" class="btn btn-primary">Back to Campaign</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}